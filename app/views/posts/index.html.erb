<h1>投稿一覧ページ</h1>
<table>
  <tr>
    <th>Content</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.content %></td>
      <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
      <td><%= link_to '投稿を編集する', edit_post_path(post.id) %></td>
      <td><%= link_to '投稿を削除する', post_path(post.id), method: :delete %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to '投稿画面へ', new_post_path %>
